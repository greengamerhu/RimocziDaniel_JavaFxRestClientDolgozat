<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.rimoczidaniel_javafxrestclientdolgozat.InsertCarsController">
   <children>
      <VBox alignment="TOP_CENTER">
         <children>
            <Label text="Gyártó">
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="companyInput" maxWidth="300.0" prefWidth="100.0" />
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </VBox>
      <VBox alignment="TOP_CENTER">
         <children>
            <Label text="Model">
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="modelInput" maxWidth="300.0" prefWidth="10.0" />
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </VBox>
      <VBox alignment="TOP_CENTER">
         <children>
            <Label text="Teljesítmény">
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Spinner fx:id="performanceSpinner" editable="true" />
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </VBox>
      <VBox alignment="TOP_CENTER">
         <children>
            <Label text="Hybrid?">
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="choiceBoxHybrid" prefWidth="150.0" />
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </VBox>
      <VBox alignment="TOP_CENTER">
         <children>
            <Button fx:id="insertButton" mnemonicParsing="false" onAction="#InsertClick" prefWidth="250.0" text="Hozzáadás" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" top="40.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
